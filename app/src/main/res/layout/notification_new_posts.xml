<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notification_newer_post_button"
        style="@style/materialButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_notification"
        android:background="@android:color/transparent"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/interest_button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/photo_camera_button"
        style="@style/materialButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:icon="@drawable/ic_photo_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/news_button"
        style="@style/materialButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Новости"
        android:paddingEnd="@dimen/common_spacing_16dp"
        android:textColor="@color/black"
        app:iconPadding="@dimen/common_spacing_8dp"
         app:icon="@drawable/ic_down_arrow"
        app:iconGravity="end"
        app:layout_constraintStart_toEndOf="@+id/photo_camera_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/interest_button"
        app:layout_constraintBottom_toBottomOf="@id/photo_camera_button"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/interest_button"
        style="@style/materialButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Интересное"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/news_button"
        app:layout_constraintEnd_toStartOf="@id/notification_newer_post_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/news_button"
        android:paddingStart="@dimen/common_spacing_16dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>